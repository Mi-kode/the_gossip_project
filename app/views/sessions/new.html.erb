<h1>Se connecter</h1>

<%= form_tag(login_path) do %>
    <div class="mb-2">
        <%= label_tag(:email, "Email", class: 'form-label') %><br>
        <%= text_field_tag(:email, nil, class: 'title form-control')%>
    </div>
    <div class="mb-2">
        <%= label_tag(:password, "Mot de passe", class: 'form-label') %><br>
        <%= password_field_tag(:password, nil, class: 'title form-control') %>
    </div>
    <div>
        <%= check_box_tag :remember_me, "1", false, class: 'form-check-input', id: 'checkDefault' %>
        <label class="form-check-label" for="checkDefault">
            Se souvenir de moi
        </label>
    </div><br>
    <div>
        <%= submit_tag("Connexion", class: 'btn btn-primary') %>
    </div><br>
    <div>
        <p style="text-align: center;">Pas encore inscrit ?</p>
        <p><%= link_to "CrÃ©er un compte", new_user_path, class: "btn btn-secondary mt-2" %></p>
    </div>
<% end %>
